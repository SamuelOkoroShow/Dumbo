{
  "name": "Dumbo",
  "version": "1.0",
  "description": "A simple adblocker",
  "manifest_version": 2,
  
  
  "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/"],
  //"browser_action": {
  //	 "default_popup": "popup.html"
  //	},

  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["<all_urls>"]
  }]
}
